- content_for :title do
  = @post.title
p
  strong.me-2 Body:
  = @post.body
/ BEGIN
- @post.comments.each do |comment|
  == render "posts/comments/comment", comment: comment

== render "posts/comments/form", comment: @comment, url: post_comments_path(@post), button_text: 'Add'
/ END
hr

.d-flex
  = link_to 'Edit', edit_post_path(@post), class: 'btn btn-outline-primary me-2'
  = link_to 'Back', :back, class: 'btn btn-outline-primary'
